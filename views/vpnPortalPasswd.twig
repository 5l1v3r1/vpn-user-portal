{% set activeItem = 'account' %}
{% extends "base.twig" %}
{% block content %}
    <p>
        {% trans "Here you can change the password for your account." %}
    </p>

    {% if errorCode is defined %}
        <p class="error">
        {% if 'wrongPassword' == errorCode %}
            {% trans "Current Password not correct!" %}
        {% elseif 'noMatchingPassword' == errorCode %}
            {% trans "New Password and New Password (confirm) MUST match!" %}
        {% else %}
            {{ errorCode }}
        {% endif %}
        </p>
    {% endif %}

    <form method="post">
        <fieldset>
            <label for="userName">{% trans "Username" %}</label>
            <input size="30" type="text"     id="userName" name="userName" value="{{ userId }}" autocapitalize="off" disabled="disabled" required>

            <label for="userPass">{% trans "Current Password" %}</label>
            <input size="30" type="password" id="userPass" name="userPass" placeholder="{% trans 'Current Password' %}" autofocus required>

            <label for="newUserPass">{% trans "New Password" %}</label>
            <input size="30" type="password" id="newUserPass" name="newUserPass" placeholder="{% trans 'New Password' %}" required>

            <label for="newUserPassConfirm">{% trans "New Password (confirm)" %}</label>
            <input size="30" type="password" id="newUserPassConfirm" name="newUserPassConfirm" placeholder="{% trans 'New Password (confirm)' %}" required>
        </fieldset>
        <fieldset>
            <button type="submit">{% trans "Confirm" %}</button>
        </fieldset>
    </form>
{% endblock %}
