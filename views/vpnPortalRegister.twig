{% extends "base.twig" %}
{% block content %}
    <ul class="menu">
        <li class="active"><span>{% trans "Register" %}</span></li>
    </ul>

    <p>
        {% trans %}
            Choose a username and password to register your account. This invite was provided to you by <code>{{ voucherUserId }}</code>.
        {% endtrans %}
    </p>

    {% if errorCode is defined %}
        <p class="error">
        {% if 'noMatchingPassword' == errorCode %}
            {% trans "Password and Password (confirm) MUST match!" %}
        {% else %}
            {{ errorCode }}
        {% endif %}
        </p>
    {% endif %}

    <form method="post">
        <fieldset>
            <label for="userName">{% trans "Username" %}</label>
            <input size="30" type="text"     id="userName" name="userName" autocapitalize="off" placeholder="{% trans 'Username' %}" autofocus required {% if userId is defined %} value="{{ userId}}" {% endif %}>
            <label for="userPass">{% trans "Password" %}</label>
            <input size="30" type="password" id="userPass" name="userPass" placeholder="{% trans 'Password' %}" required>

            <label for="userPassConfirm">{% trans "Password (confirm)" %}</label>
            <input size="30" type="password" id="userPassConfirm" name="userPassConfirm" placeholder="{% trans 'Password (confirm)' %}" required>
        </fieldset>
        <fieldset>
            <input type="hidden" name="voucherCode" value="{{ voucherCode }}">
            <button type="submit">{% trans "Register" %}</button>
        </fieldset>
    </form>
{% endblock %}
